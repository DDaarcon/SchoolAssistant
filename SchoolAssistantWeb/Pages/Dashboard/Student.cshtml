        }, containerClass: "schedule-view")
    </div>
    <div class="dashboard-item dashboard-item-cyan dashboard-marks-overview">
        <partial name="Components/_MarksOverview" for="MarksOverview" />
    </div>
    <div class="dashboard-item dashboard-item-cyan">
        <partial name="Components/_MarksOverview" for="MarksOverview" />
    </div>
    <div class="dashboard-item dashboard-item-cyan">
        <partial name="Components/_MarksOverview" for="MarksOverview" />
    </div>
</div>

@section Scripts{
