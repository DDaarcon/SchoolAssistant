@page
@using Microsoft.AspNetCore.Antiforgery
@model SchoolAssistant.Web.Pages.DataManagement.DataManagementModel
@inject IAntiforgery antiforgery
@{
    var token = antiforgery.GetAndStoreTokens(HttpContext).RequestToken;
}

@section Head {
    <link rel="stylesheet" href="~/dist/data_management.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/loader.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modal.css" asp-append-version="true" />
}

@Html.React("Components.DataManagement", new {})

@section Scripts {
    <script>
        const antiforgeryToken = '@token';
    </script>

    <script src="~/dist/data_management.bundle.js" asp-append-version="true"></script>
}